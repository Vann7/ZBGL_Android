<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_user"
    tools:context=".fragment.SyncFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/sync_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ProgressBar
            android:id="@+id/sync_progressBar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="300dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/salmon"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:layout_marginTop="300dp"
            android:textSize="26sp"
            android:text="正在同步中，请不要退出应用"
            />
    </LinearLayout>





    <TextView
        android:id="@+id/sync_data"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:background="@color/lightgray"
        android:text="同步数据"/>

    <TextView
        android:id="@+id/sync_file"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="100dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@color/lightgray"
        android:text="同步文件"/>



</RelativeLayout>