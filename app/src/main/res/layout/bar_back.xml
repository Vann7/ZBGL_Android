<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#0071BC"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:orientation="horizontal">



    <ImageView
        android:id="@+id/bar_back_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/back_light"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/bar_back_tv"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="当前页面名称"
        android:textColor="#d3d3d3"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/device_delete"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/lightgray"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="gone"
        android:text="删除"/>
    <ImageView
        android:id="@+id/device_media_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/add"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/upload_more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/more_white"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/select_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/lightgray"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"
        android:text="全选"/>

    <TextView
        android:id="@+id/unselect_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/lightgray"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"
        android:text="全不选"/>

</RelativeLayout>
